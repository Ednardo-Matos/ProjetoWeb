<%- contentFor('body') %>

<main class="container">
<h1>Categorias</h1>
<a class="btn btn-primary" href="/admpanel/categories/new" role="button">Novo</a>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nome</th>
        <th scope="col">Descrição</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach((category) =>{%>
        <tr>
          <th scope="row"><%= category.id %></th>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td>
            <a href="/admpanel/categories/edit/<%= category.id %>" class="btn btn-primary">Editar</a>
            <a href="#" class="btn btn-danger">Remover</a>
          </td>
        </tr>
      <% })%>

    </tbody>
  </table>

</main>